<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".actividades.EditarPerfilActivity"
    android:background="@color/fondo_proyecto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/editar_informacion"
                android:gravity="center_horizontal"
                android:textSize="40dp"
                android:layout_marginTop="20dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:hint="@string/nombres"
                app:endIconMode="clear_text"
                app:counterEnabled="false"
                android:layout_margin="10dp"
                app:hintTextColor="@color/fondoBarra"
                android:textColorHint="@color/fondoBarra"
                app:cursorColor="@color/fondoBarra"
                app:boxStrokeColor="@color/fondoBarra">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:hint="@string/apellidos"
                app:endIconMode="clear_text"
                app:counterEnabled="false"
                android:layout_margin="10dp"
                app:hintTextColor="@color/fondoBarra"
                android:textColorHint="@color/fondoBarra"
                app:cursorColor="@color/fondoBarra"
                app:boxStrokeColor="@color/fondoBarra">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTxtApellidos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:hint="@string/correo"
                app:endIconMode="clear_text"
                app:counterEnabled="false"
                android:layout_margin="10dp"
                app:hintTextColor="@color/fondoBarra"
                android:textColorHint="@color/fondoBarra"
                app:cursorColor="@color/fondoBarra"
                app:boxStrokeColor="@color/fondoBarra">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTxtCorreo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:hint="@string/numero_celular"
                app:endIconMode="clear_text"
                app:counterEnabled="false"
                android:layout_margin="10dp"
                app:hintTextColor="@color/fondoBarra"
                android:textColorHint="@color/fondoBarra"
                app:cursorColor="@color/fondoBarra"
                app:boxStrokeColor="@color/fondoBarra">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTxtCelular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:hint="@string/fecha_nacimiento"
                app:endIconMode="clear_text"
                app:counterEnabled="false"
                android:layout_margin="10dp"
                app:hintTextColor="@color/fondoBarra"
                android:textColorHint="@color/fondoBarra"
                app:cursorColor="@color/fondoBarra"
                app:boxStrokeColor="@color/fondoBarra">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTxtFechaNac"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="date"/>

            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:id="@+id/EditPerfBtnGuardarCambios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_guardar_cambios"
                android:layout_margin="10dp"
                android:textAllCaps="false"
                android:backgroundTint="@color/fondoBarra"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cancelar"
                android:layout_margin="10dp"
                android:textAllCaps="false"
                android:backgroundTint="@color/fondoBarra"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
